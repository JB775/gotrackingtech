<%= form_for @user, html: { multipart: true } do |f|  %>

<p>
	<%= f.label :email, "Update Primary Email:"  %>
	<%= f.text_field :email, :style => "width:200px;" %>

</p>
<p>
	<%= f.label :password, "Change Password:" %>
	<%= f.password_field :password %>
</p>
<p>
	<%= f.label :password, "Confirm New Password:" %>
	<%= f.password_field :password %>
</p>
<p>
	<%= f.label :image %>
	<%= f.file_field :image %>
</p>


<p>
	<%= f.submit %>
</p>
<% end %>

